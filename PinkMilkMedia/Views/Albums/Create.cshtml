@model PinkMilkMedia.Models.AlbumWrapper

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Album.Name" class="control-label"></label>
                <input asp-for="Album.Name" class="form-control" />
                <span asp-validation-for="Album.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.DateOfShoot" class="control-label"></label>
                <input asp-for="Album.DateOfShoot" class="form-control" />
                <span asp-validation-for="Album.DateOfShoot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.link" class="control-label"></label>
                <input asp-for="Album.link" class="form-control" />
                <span asp-validation-for="Album.link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.OwnerId" class="control-label"></label>
                @Html.DropDownListFor(m => m.Album.OwnerId, new SelectList(Model.CurrentUsers, "Id", "FullName"))
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

