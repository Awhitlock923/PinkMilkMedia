@model IEnumerable<PinkMilkMedia.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owners)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfShoot)
            </th>
            <th></th>
        </tr>
            
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(item.Name)
            </td>
            <td>
                @(item.Owners)
            </td>
            <td>
                @(item.DateOfShoot)
            </td>
            <td>
                <a asp-action="Photos" asp-route-id="@item.Id">Photos</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="CPhotos" asp-route-id="@item.Id">Add Photos</a>
            </td>
        </tr>
}
    </tbody>
</table>
